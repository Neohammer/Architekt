{
    "name": "neohammer/architekt",
    "description": "Build quick with Architekt library",
    "type": "library",
    "license": "None",
    "autoload": {
        "psr-4": {
            "Architekt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\Architekt\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Neohammer",
            "email": "m.marceau@gmail.com"
        }
